{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block content %}

	{% set Role = app.session.get('Role') %}
	{% if ( Role.UTI_ROLE == 1 ) %}
		<div>
			<h1 class="text-light">Ajouter utilisateurs <a href="{{ path('AjoutUtilisateurs') }}"><i class="fa fa-plus" aria-hidden="true"></i></a></h1>
		</div>
		<table class="table table-striped table-dark" id="userTable">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Nom</th>
					<th scope="col">Role</th>
                    <th scope="col">Options</th>
				</tr>
			</thead>
			{% for UTILISATEUR in listeUtilisateurs %}
				<tbody>
					<tr>
						<th>{{ UTILISATEUR.id }}</th>
						<td>{{ UTILISATEUR.UTI_Login }}</td>
						<td>
							{% if ( UTILISATEUR.UTI_Role == 1 ) %}
								Admin
							{% else %}
								Enseignant
							{% endif %}
						</td>
                        <td>
                            <a href="{{ path('ModifierUtilisateur',{ 'id': UTILISATEUR.id}) }}"> <i class="fa-solid fa-pen" id="iconModifier"></i> </a>
							<a href="{{ path('SupprimerUtilisateur',{ 'id': UTILISATEUR.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer cette utilisateur ?');">
									<i class="fa-solid fa-trash-can" id="iconSupprimer"></i>
							</a>
                        </td>
					</tr>
				</tbody>
			{% endfor %}
		</table>
{% else %}
	<h1>
		Vous n'avez pas les droits pour accéder à cette page.
	</h1>
{% endif %}{% endblock %}
